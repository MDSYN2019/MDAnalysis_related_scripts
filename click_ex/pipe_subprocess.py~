def callialign(folder, pdb1, chain1, pdb2, chain2):
	IalignPath = "/home/oohnohnoh1/Desktop/ACADEMIA/Papermaking/OPTIMUS_BIND/ialign/bin/ialign.pl"
	p = subprocess.Popen([IalignPath, "-w", folder, pdb1, chain1, pdb2, chain2], stdout = subprocess.PIPE)
	p.communicate()

